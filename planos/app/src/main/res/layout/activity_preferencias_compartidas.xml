<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenciasCompartidas"
    android:orientation="vertical"
    android:padding="15dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etValor"
        android:hint="Dato String"
        android:textAlignment="center"
        android:textSize="20sp"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEntero"
        android:hint="Dato Entero"
        android:textAlignment="center"
        android:textSize="20sp"
        android:inputType="number"
        ></EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBooleano"
        android:hint="Dato Booleano"
        android:textAlignment="center"
        android:textSize="20sp"
        ></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardar"
        android:text="Guardar Dato"
        android:textSize="20sp"
        ></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSalida"
        android:hint="Dato string"
        android:textAlignment="center"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSalidaEntero"
        android:hint="Dato entero"
        android:textAlignment="center"
        ></TextView>

</LinearLayout>