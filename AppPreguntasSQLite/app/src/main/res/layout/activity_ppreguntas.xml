<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PPreguntas"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Añade tus propias preguntas!"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/purple"
            android:background="@color/especial"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pregunta"
            android:id="@+id/etPegunta"
            ></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 1"
            android:id="@+id/etResp1"
            ></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 2"
            android:id="@+id/etResp2"
            ></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 3"
            android:id="@+id/etResp3"
            ></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta correcta"
            android:id="@+id/etOpCorrecta"
            ></EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registar Pregunta"
            android:id="@+id/btnRegistar"
            android:backgroundTint="@color/purple"
            android:layout_marginTop="20dp"
            ></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al juego"
            android:id="@+id/btnVolver"
            android:backgroundTint="@color/regresar"
            android:layout_marginTop="30dp"
            ></Button>

    </LinearLayout>

</LinearLayout>